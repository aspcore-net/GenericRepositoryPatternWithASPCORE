@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" ng-controller="employee-controller" ng-cloak>

    <div class="navbar-form text-right" role="search">
        <div class="input-group add-on">
            <input type="text" class="form-control" placeholder="Search" ng-model="filterKey" ng-keypress="doFilter($event)"/>
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search" ng-click="loadData()"></i></button>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <table class="table table-bordered table-striped" block-ui="blockContainer">
            <thead>
                <tr>
                    <th><b>Employee Name</b></th>
                    <th><b>Date of Birth</b></th>
                    <th><b>Gender</b></th>
                    <th><b>Joining Date</b></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in employeesList track by $index">
                    <td class="text-left">{{item.firstName}} {{item.lastName}}</td>
                    <td class="text-left">{{item.dob | date : "MM/dd/yyyy"}}</td>
                    <td class="text-left">{{item.gender === "M" ? "Male" : "Female"}}</td>
                    <td class="text-left">{{item.doh | date : "MM/dd/yyyy"}}</td>
                </tr>
                <tr ng-hide="employeesList.length === 0">
                    <td colspan="4">
                        <div class="pull-left mt30">
                            {{pageSummary}}
                        </div>
                        <div class="pull-right">
                            <ul id="pager" class="pagination"></ul>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="empty-row" ng-show="employeesList.length === 0">
            No record found.
        </div>
    </div>
</div>

@section scripts{

    <script src="~/js/services/employee.service.js" asp-append-version="true"></script>
    <script src="~/js/controllers/employee.controller.js" asp-append-version="true"></script>
}